    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const relationshipData = {
                "apple-samsung": {
                    title: "Apple 🤝 Samsung",
                    text: "Apple, a hardware designer, needs Samsung's world-leading manufacturing for critical iPhone components like OLED displays and memory chips. In return, Samsung gets its single largest and most profitable customer, whose payments help fund R&D for its own competing Galaxy phones."
                },
                "samsung-google": {
                    title: "Samsung 🤝 Google",
                    text: "Samsung, the world's largest phone maker, needs Google's Android OS and App Store to make its devices viable. Google needs Samsung's massive global distribution to get its services—and its core advertising business—in front of hundreds of millions of users."
                },
                "apple-google": {
                    title: "Apple 🤝 Google",
                    text: "Google pays Apple an estimated $20 billion per year to be the default search engine in Safari. This gives Apple a massive, pure-profit revenue stream, while Google secures access to the world's most valuable mobile users, protecting its search monopoly."
                }
            };

            const lines = document.querySelectorAll('.relationship-line');
            const titleEl = document.getElementById('relationship-title');
            const textEl = document.getElementById('relationship-text');
            const contentDisplay = document.getElementById('content-display');

            lines.forEach(line => {
                line.addEventListener('click', (e) => {
                    const relationshipId = e.target.dataset.relationship;
                    const data = relationshipData[relationshipId];
                    
                    lines.forEach(l => l.classList.remove('active', 'stroke-amber-500'));
                    e.target.classList.add('active', 'stroke-amber-500');

                    contentDisplay.classList.remove('content-fade');
                    void contentDisplay.offsetWidth;
                    contentDisplay.classList.add('content-fade');

                    titleEl.textContent = data.title;
                    textEl.textContent = data.text;
                });
            });

            const createGoogleAppleDealChart = () => {
                const ctx = document.getElementById('googleAppleDealChart').getContext('2d');
                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: ['2021', '2022', '2024 (est.)', '2025+'],
                        datasets: [{
                            label: 'Payment in Billions (USD)',
                            data: [18, 20, 20, 0],
                            backgroundColor: ['#3b82f6', '#3b82f6', '#3b82f6', '#ef4444'],
                            borderColor: ['#2563eb', '#2563eb', '#2563eb', '#dc2626'],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { display: false },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        let label = context.dataset.label || '';
                                        if (label) {
                                            label += ': ';
                                        }
                                        if (context.parsed.y !== null) {
                                            if (context.label === '2025+') {
                                                label = 'At Risk of Termination';
                                            } else {
                                                label += '$' + context.parsed.y + 'B';
                                            }
                                        }
                                        return label;
                                    }
                                }
                            },
                             title: {
                                display: true,
                                text: 'Google to Apple Payments'
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                title: {
                                    display: true,
                                    text: 'Billions (USD)'
                                }
                            }
                        }
                    }
                });
            };
            
            const createAppleRevenueChart = () => {
                const ctx = document.getElementById('appleRevenueChart').getContext('2d');
                new Chart(ctx, {
                    type: 'doughnut',
                    data: {
                        labels: ['iPhone (~49%)', 'Services (~22%)', 'Wearables, etc. (~10%)', 'Mac (~9%)', 'iPad (~7%)'],
                        datasets: [{
                            data: [49, 22, 10, 9, 7],
                            backgroundColor: ['#60a5fa', '#3b82f6', '#1d4ed8', '#93c5fd', '#bfdbfe'],
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'bottom',
                                labels: {
                                    boxWidth: 12,
                                    padding: 15,
                                    font: { size: 10 }
                                }
                            },
                             title: {
                                display: false,
                            }
                        }
                    }
                });
            };

            const createGoogleRevenueChart = () => {
                const ctx = document.getElementById('googleRevenueChart').getContext('2d');
                new Chart(ctx, {
                    type: 'doughnut',
                    data: {
                        labels: ['Google Advertising (~79%)', 'Google Cloud (~9%)', 'Google Other (~10%)'],
                        datasets: [{
                            data: [79, 9, 10],
                            backgroundColor: ['#4ade80', '#22c55e', '#15803d'],
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'bottom',
                                labels: {
                                    boxWidth: 12,
                                    padding: 15,
                                    font: { size: 10 }
                                }
                            },
                             title: {
                                display: false,
                            }
                        }
                    }
                });
            };
            
            createGoogleAppleDealChart();
            createAppleRevenueChart();
            createGoogleRevenueChart();
        });
    </script>
